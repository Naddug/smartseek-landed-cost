# Database — use public URL for Railway (postgres.railway.internal only works in same project)
DATABASE_URL="postgresql://user:password@host:port/dbname"

# Session (required for auth)
SESSION_SECRET="your-secret-key-min-32-chars"

# Stripe (for billing)
STRIPE_SECRET_KEY="sk_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# OpenAI (for AI reports, Find Leads)
OPENAI_API_KEY="sk-..."

# =============================================================================
# Integrations – OAuth 2.0 (see INTEGRATIONS.md for setup)
# Add these to enable Connect buttons for each platform
# =============================================================================

# Google Workspace (free – works immediately: console.cloud.google.com)
INTEGRATION_GOOGLE_CLIENT_ID=
INTEGRATION_GOOGLE_CLIENT_SECRET=
# Fix redirect_uri_mismatch: set your app URL (no trailing slash)
# PUBLIC_APP_URL=https://app.smartseek.com

# SAP Ariba
INTEGRATION_SAP_ARIBA_CLIENT_ID=
INTEGRATION_SAP_ARIBA_CLIENT_SECRET=

# Oracle
INTEGRATION_ORACLE_CLIENT_ID=
INTEGRATION_ORACLE_CLIENT_SECRET=

# Salesforce
INTEGRATION_SALESFORCE_CLIENT_ID=
INTEGRATION_SALESFORCE_CLIENT_SECRET=

# Microsoft Dynamics
INTEGRATION_MICROSOFT_CLIENT_ID=
INTEGRATION_MICROSOFT_CLIENT_SECRET=

# Coupa
INTEGRATION_COUPA_CLIENT_ID=
INTEGRATION_COUPA_CLIENT_SECRET=

# Jaggaer
INTEGRATION_JAGGAER_CLIENT_ID=
INTEGRATION_JAGGAER_CLIENT_SECRET=

